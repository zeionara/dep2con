name:                dep2con
version:             0.1.0.0
synopsis:            Several algorithms for converting dependency
                     structures into constituency structures. 
license:             BSD3
license-file:        LICENSE
author:              Wen Kokke
maintainer:          wen.kokke@gmail.com
copyright:           Wen Kokke (c) 2014
category:            Language
build-type:          Simple
cabal-version:       >=1.10

library
  build-depends:     base >=4.7
                   , utf8-string
                   , containers
                   , uu-parsinglib
  hs-source-dirs:    src
  exposed-modules:   Language.Wordd
                   , Data.String.Utils
                   , Language.Wordd.Parse
                   , Language.POS
                   , Language.POS.Parse
                   , Language.Structure.Dependency
                   , Language.Structure.Binary
                   , Language.Structure.Dependency.Parse
                   , Language.Structure.Constituency
                   , Language.Conversion.Dep2Con
                   , Language.Conversion.Con2Bin
                   , Language.Conversion.Dep2Bin
  default-language:  Haskell2010


executable dep2con
  main-is:           Dep2Con.hs
  build-depends:     base >=4.7
                   , containers
                   , cmdargs
                   , dep2con
                   , uu-parsinglib
  hs-source-dirs:    src
  default-language:  Haskell2010


executable dep2bin
  main-is:           Dep2Bin.hs
  build-depends:     base >=4.7
                   , containers
                   , cmdargs
                   , dep2con
                   , uu-parsinglib
  hs-source-dirs:    src
  default-language:  Haskell2010

test-suite test-conversion
  type:              exitcode-stdio-1.0
  main-is:           TestConversion.hs
  build-depends:     base >=4.7
                   , containers
                   , dep2con
                   , Glob
                   , uu-parsinglib
  hs-source-dirs:    src
                   , test
  default-language:  Haskell2010


